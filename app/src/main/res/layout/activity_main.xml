<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:padding="@dimen/padding20dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/whimage"
        android:layout_height="@dimen/whimage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/jarak10dp"
        android:src="@drawable/firebaseicon" />

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/jarak10dp"
        android:layout_marginTop="@dimen/jarak10dp"
        android:text="@string/defaultwelcomemessage"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/fetchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/jarak10dp"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:text="@string/fetch_remote_welcome_message"
        android:textColor="@android:color/white" />

</RelativeLayout>
